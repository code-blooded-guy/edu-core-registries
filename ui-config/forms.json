{
    "type": "opensaberLayoutSchema",
    "version": "0.1",
    "forms": [
        {
            "institute-signup": {
                "api": "/Institute/invite",
                "type": "entity",
                "formclass": "row",
                "header": "default",
                "title": "Register",
                "isSignupForm":"true",
                "fieldsets": [
                    {
                        "definition": "Institute",
                        "fields": [
                            {
                                "name": "instituteName",
                                "required": true
                            },
                            {
                                "name": "email",
                                "required": true,
                                "validation": {
                                    "pattern": "^[a-zA-Z0-9+_.-]+@[a-zA-Z0-9.-]+\\.[a-zA-Z0-9.-]+$",
                                    "message": "Email is not valid."
                                }
                            },
                            {
                                "name": "t&c",
                                "custom": true,
                                "required": true,
                                "element": {
                                    "title": "I accept Terms & Conditions ",
                                    "widget": {
                                        "formlyConfig": {
                                            "type": "checkbox",
                                            "fieldGroupClassName": "controls",
                                            "className": "checkbox",
                                            "templateOptions": {
                                                "required": true
                                            }
                                        }
                                    }
                                }
                            }
                        ]
                    }
                ],
                "redirectTo": "/profile/institute"
            }
        },
        {
            "institute-setup": {
                "api": "/Institute",
                "type": "entity",
                "title": "Institute Setup",
                "fieldsets": [
                    {
                        "definition": "Institute",
                        "privacyConfig": "InstituteOsConfig",
                        "globalPrivacyConfig": "public-access",
                        "title": "Basic details",
                        "fields": [
                            {
                                "name": "instituteName",
                                "required": true
                            },
                            {
                                "name": "gstnId",
                                "validation": {
                                    "pattern": "^[0-9]{2}[A-Z]{5}[0-9]{4}[A-Z]{1}[1-9A-Z]{1}Z[0-9A-Z]{1}$",
                                    "message": "GSTIN is not valid. Ex: 06BZAHM6385P6Z2"
                                }
                            },
                            {
                                "name": "address",
                                "required": true
                            },
                            {
                                "name": "establishmentYear",
                                "required": true,
                                "validation": {
                                    "pattern": "^[12][0-9]{3}$",
                                    "message": "Year is not valid"
                                }
                            },
                            {
                                "name": "contactNumber",
                                "type": "number",
                                "required": true
                            },
                            {
                                "name": "email",
                                "required": true,
                                "validation": {
                                    "pattern": "^[a-zA-Z0-9+_.-]+@[a-zA-Z0-9.-]+\\.[a-zA-Z0-9.-]+$",
                                    "message": "Email is not valid."
                                }
                            },
                            {
                                "name": "website",
                                "required": true
                            },
                            {
                                "name": "category",
                                "required": true
                            },
                            {
                                "name": "schoolType",
                                "required": true
                            },
                            {
                                "name": "instituteManagement",
                                "required": true
                            },
                            {
                                "name": "committee",
                                "required": true
                            },
                            {
                                "name": "adminEmail",
                                "required": true,
                                "validation": {
                                    "pattern": "^[a-zA-Z0-9+_.-]+@[a-zA-Z0-9.-]+\\.[a-zA-Z0-9.-]+$",
                                    "message": "Email is not valid."
                                }
                            },
                            {
                                "name": "adminName",
                                "required": true,
                                "validation": {
                                    "pattern": "^[a-zA-Z]+ [a-zA-Z]+$",
                                    "message": "Name is not valid."
                                }
                            }
                        ],
                        "except": [
                            "affiliation"
                        ]
                    }
                ],
                "redirectTo": "/profile/institute"
            }
        },
        {
            "course": {
                "api": "/Institute",
                "type": "property:courses",
                "title": "Courses",
                "redirectTo": "/profile/institute",
                "fieldsets": [
                    {
                        "definition": "Courses",
                        "privacyConfig": "CoursesOsConfig",
                        "fields": [
                            {
                                "name": "name",
                                "required": true
                            }
                        ]
                    }
                ]
            }
        },
        {
            "skill": {
                "api": "/Institute",
                "type": "property:skills",
                "title": "Skills",
                "redirectTo": "/profile/institute",
                "fieldsets": [
                    {
                        "definition": "Skills",
                        "privacyConfig": "SkillsOsConfig",
                        "fields": [
                            {
                                "name": "name",
                                "required": true
                            }
                        ]
                    }
                ]
            }
        },
        {
            "issue": {
                "api": "/Certificates",
                "type": "entity",
                "header": "institute",
                "title": "Issue Certificate",
                "redirectTo": "/profile/institute",
                "fieldsets": [
                    {
                        "definition": "Certificates",
                        "privacyConfig": "CertificatesOsConfig",
                        "fields": [
                            {
                                "name": "name",
                                "required": true
                            },
                            {
                                "name": "certificateType",
                                "required": true
                            },
                            {
                                "name": "mobile"
                            },
                            {
                                "name": "email"
                            },
                            {
                                "name": "course",
                                "required": true,
                                "hideExpression":"model.certificateType != 'Attendance'"
                            
                            },
                            {
                                "name": "skill",
                                "required": true,
                                "hideExpression":"model.certificateType != 'Skill'"
                              
                            },
                            {
                                "name": "grades",
                                "required": true,
                                "hideExpression":"model.certificateType != 'Skill'"
                            },
                            {
                                "name": "awardedOn",
                                "required": true,
                                "type": "date"
                            }
                            
                        ]
                    }
                ]
            }
        },
        {
            "student-signup": {
                "api": "/Student/invite",
                "type": "entity",
                "formclass": "row",
                "header": "default",
                "title": "Register",
                "isSignupForm":"true",
                "fieldsets": [
                    {
                        "definition": "Student",
                        "dependencies": {
                            "above13": {
                                "oneOf": [
                                    {
                                        "properties": {
                                            "above13": {
                                                "enum": [
                                                    "No"
                                                ]
                                            },
                                            "guardianDetails": {
                                                "type": "object",
                                                "properties": {
                                                    "fullName": {
                                                        "type": "string",
                                                        "title": "Guardian's Full Name"
                                                    },
                                                    "relation": {
                                                        "type": "string",
                                                        "title": "Guardian's Relation type"
                                                    }
                                                }
                                            }
                                        }
                                    },
                                    {
                                        "properties": {
                                            "above13": {
                                                "enum": [
                                                    "Yes"
                                                ]
                                            }
                                        },
                                        "required": [
                                            "guardianDetails"
                                        ]
                                    }
                                ]
                            }
                        },
                        "fields": [
                            {
                                "name": "above13",
                                "custom": true,
                                "element": {
                                    "title": "Are you above 13?",
                                    "enum": [
                                        "Yes",
                                        "No"
                                    ],
                                    "widget": {
                                        "formlyConfig": {
                                            "type": "radio",
                                            "defaultValue" : "Yes",
                                            "fieldGroupClassName": "controls",
                                            "className": "radio"
                                        }
                                    }
                                }
                            },
                            {
                                "name": "identityDetails",
                                "children": {
                                    "definition": "IdentityDetails",
                                    "title": false,
                                    "fields": [
                                        {
                                            "name": "fullName",
                                            "description" : "as per ID(Aadhaar)",
                                            "required": true,
                                            "validation": {
                                                "pattern": "^[a-zA-Z]+ [a-zA-Z]+$",
                                                "message": "Name is not valid."
                                            }
                                        }
                                    ]
                                }
                            },
                            {
                                "name": "contactDetails",
                                "children": {
                                    "definition": "ContactDetails",
                                    "title": false,
                                    "fields": [
                                        {
                                            "name": "email",
                                            "required": true,
                                            "validation": {
                                                "pattern": "^[a-zA-Z0-9+_.-]+@[a-zA-Z0-9.-]+\\.[a-zA-Z0-9.-]+$",
                                                "message": "Email is not valid."
                                            }
                                        },
                                        {
                                            "name": "mobile",
                                            "required": true,
                                            "validation": {
                                                "pattern": "[6-9]{1}[0-9]{9}",
                                                "message": "Mobile Number must be 10 digit number."
                                            }
                                        }
                                    ]
                                }
                            },
                            {
                                "name": "t&c",
                                "custom": true,
                                "element": {
                                    "title": "I accept Terms & Conditions ",
                                    "widget": {
                                        "formlyConfig": {
                                            "type": "checkbox",
                                            "fieldGroupClassName": "controls",
                                            "className": "checkbox",
                                            "templateOptions": {
                                                "required": true
                                            }
                                        }
                                    }
                                }
                            }
                        ]
                    }
                ],
            "redirectTo": "/profile/student"
            }
        },
        {
            "student-setup": {
                "api": "/Student",
                "type": "entity",
                "redirectTo": "/profile/student",
                "fieldsets": [
                    {
                        "definition": "Student",
                        "privacyConfig": "StudentOsConfig",
                        "globalPrivacyConfig": "private-access",
                        "fields": [
                            {
                                "name": "contactDetails"
                            },
                            {
                                "name": "identityDetails",
                                "children": {
                                    "definition": "IdentityDetails",
                                    "title": false,
                                    "fields": [
                                        {
                                            "name": "fullName",
                                            "required": true,
                                            "validation": {
                                                "pattern": "^[a-zA-Z]+ [a-zA-Z]+$",
                                                "message": "Name is not valid."
                                            }
                                        },
                                        {
                                            "name": "gender"
                                        },
                                        {
                                            "name": "dob",
                                            "required": true,
                                            "type": "date",
                                            "validation": {
                                                "future":true
                                            }
                                        },
                                        {
                                            "name": "identityHolder",
                                            "required": true
                                        }
                                    ]
                                }
                            }
                        ]
                    }
                ]
            }
        }
    ]
}
